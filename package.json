{
  "name": "@cnpja/sdk",
  "version": "1.0.0",
  "description": "CNPJá! SDK para integração a nossa API de Consultas CNPJ a Receita Federal, Simples Nacional, Cadastro de Contribuintes e SUFRAMA",
  "author": {
    "name": "Etienne Bechara",
    "email": "etienne.bechara@cnpja.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cnpja/sdk-nodejs"
  },
  "license": "SEE LICENSE IN LICENSE",
  "main": "dist/index.js",
  "files": [
    "dist/**"
  ],
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "prepare": "husky install .config/husky",
    "build": "rimraf ./dist && pnpm build:index && tsc -p tsconfig.build.json && pnpm build:cleanup",
    "build:index": "rimraf ./source/index.ts && barrelsby -q -e \\.spec\\.ts$ -d ./source",
    "build:cleanup": "rimraf ./source/index.ts",
    "lint": "export TIMING=1 || set TIMING=1&& eslint **/*.ts --max-warnings=0",
    "test": "jest --forceExit --config .config/jest/.jestrc.json"
  },
  "devDependencies": {
    "@bechara/eslint-config-bechara-ts": "1.5.0",
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@google-cloud/storage": "7.1.0",
    "@types/jest": "29.5.5",
    "@types/jsonwebtoken": "9.0.3",
    "@types/node": "20.6.5",
    "@types/supertest": "2.0.13",
    "barrelsby": "2.8.1",
    "eslint": "8.50.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-sonar-reporter": "2.0.0",
    "openapi-typescript": "6.7.0",
    "rimraf": "5.0.1",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-node-dev": "2.0.0",
    "typescript": "5.2.2"
  }
}
